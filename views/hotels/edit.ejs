<% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Hotel</h1>
        <div class="col-6 offset-3">
            <form action="/hotels/<%=hotel._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" value="<%=hotel.title%>" type="text" id="title" name="hotel[title]"
                        required>
                    <div class="valid-feedback">
                        nice
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" value="<%=hotel.location%>" type="text" id="location"
                        name="hotel[location]" required>
                    <div class="valid-feedback">
                        nice
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" value="<%=hotel.image%>" id="image" name="hotel[image]"
                        required>
                    <div class="valid-feedback">
                        nice
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Hotel price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="basic-addon1">$</span>
                        <input name="hotel[price]" value="<%=hotel.price%>" type="text" id="price" class="form-control"
                            placeholder="0.00" aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            nice
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">description</label>
                    <textarea class="form-control" type="text" id="description" name="hotel[description]" required>
                    <%=hotel.description %></textarea>
                    <div class="valid-feedback">
                        nice
                    </div>
                </div>
                <!--no value in textarea-->
                <div class=" mb-3"><button class="btn btn-info">Update Hotel</button></div>
            </form>
            <a href="/hotels/<%=hotel._id %>">BACK</a>
        </div>
    </div>